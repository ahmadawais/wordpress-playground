{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"allowSyntheticDefaultImports": true,
		"jsx": "preserve",
		"target": "esnext",
		"module": "esnext",
		"lib": [ "dom", "esnext" ],
		"declaration": true,
		"declarationMap": false,
		"composite": true,
		"emitDeclarationOnly": true,
		"isolatedModules": true,
		"removeComments": false,

		"strict": true,

		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"importsNotUsedAsValues": "error",
	

        "moduleResolution": "node",

		"esModuleInterop": false,
		"resolveJsonModule": true,

		"rootDir": "packages",
		"declarationDir": "build-types",
		"outDir": "build-types",

		"baseUrl": ".",
		"paths": {
		  "php-wasm": ["build-types/php-wasm/src/index.d.ts", "packages/php-wasm/src/index.ts"],
		  "php-wasm-browser": ["build-types/php-wasm-browser/src/index.d.ts", "packages/php-wasm-browser/src"],
		  "php-wasm-browser/service-worker": [
			"build-types/php-wasm-browser/src/service-worker/worker-library.d.ts",
			"packages/php-wasm-browser/src/service-worker/worker-library.ts"
		  ],
		  "php-wasm-browser/worker-thread": [
			"build-types/php-wasm-browser/src/worker-thread/worker-library.d.ts",
			"packages/php-wasm-browser/src/worker-thread/worker-library.ts"
		  ],
		  "wordpress-wasm": [
			"build-types/wordpress-wasm/src/index.d.ts",
			"packages/wordpress-wasm/src/index.ts"
		  ]
		}
	}
}
